// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.2/containers/java
{
  "name": "Java",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      // Update the VARIANT arg to pick a Java version >= 11
      "VARIANT": "17",
      // Options to install Maven or Gradle
      "INSTALL_MAVEN": "true",
      "MAVEN_VERSION": "3.8.6",
      "MAVEN_DOWNLOAD_SHA": "f92dbd90060c5fd422349f844ea904a0918c9c9392f3277543ce2bfb0aab941950bb4174d9b6e2ea84cd48d2940111b83ffcc2e3acf5a5b2004277105fd22be9",
      "INSTALL_GRADLE": "false",
      "GRADLE_VERSION": "5.4.1",
      "GRADLE_DOWNLOAD_SHA": "7bdbad1e4f54f13c8a78abc00c26d44dd8709d4aedb704d913fb1bb78ac025dc",
      "INSTALL_NODE": "false",
      "NODE_VERSION": "lts/*"
    }
  },
  // Set *default* container specific settings.json values on container create.
  "settings": {
    // "terminal.integrated.shell.linux": "/bin/bash",
    "java.jdt.ls.java.home": "/docker-java-home",
    "editor.formatOnSave": true,
    "[java]": {
      "editor.suggest.snippetsPreventQuickSuggestions": false,
      "editor.defaultFormatter": "redhat.java",
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      }
    }
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "vscjava.vscode-java-pack",
    "pivotal.vscode-spring-boot",
    "vscjava.vscode-spring-boot-dashboard",
    "vscjava.vscode-spring-initializr",
    "gabrielbb.vscode-lombok",
    "eamodio.gitlens",
    "GitHub.vscode-pull-request-github"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8080
    // 8081,
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "java -version",
  // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "vscode",
  "runArgs": ["--network=host"],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker": "20.10"
  }
}
